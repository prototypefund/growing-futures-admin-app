{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "product",
    "description": "A product that can be added to a CSA delivery",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the product",
            "type": "string",
            "xDisplay": "Name"
        },
        "image": {
            "description": "A url to an icon for this vegetable 256x256",
            "type": "string",
            "xDisplay": "Image"
        },
        "categories": {
            "description": "A url to an icon for this vegetable 256x256",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true,
            "xDisplay": "Categories",
            "xRef": "category",
            "xType": "multiSelect"
        },
        "unit": {
            "type": "string",
            "description": "The default unit used for this product",
            "xDisplay": "Unit"
        }
    },
    "required": [
        "name",
        "categories",
        "unit"
    ]
}
